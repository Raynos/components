#!/usr/bin/env node
const fs = require('fs')
const path = require('path')
const stylus = require('stylus')

const toCSS = str => ({
  then (resolve) {
    stylus(str).render((err, css) => resolve({ err, css }))
  }
})

const componentsDir = path.join(__dirname, '..', 'src')
const dest = path.join(__dirname, '..', 'index.js')
const dirs = fs.readdirSync(componentsDir)

const re = /%style%/
const pre = /\n(\s*)this.stylesheet/u

async function main () {
  const output = []

  for (const dir of dirs) {
    const styl = path.join(componentsDir, dir, 'index.styl')
    const src = path.join(componentsDir, dir, 'index.js')
    const { err, css } = await toCSS(fs.readFileSync(styl, 'utf8'))

    if (err) {
      console.error(err.message)
      process.exit(1)
    }

    const js = fs.readFileSync(src, 'utf8')

    const ws = js.match(pre)
    let padding = 0
    let paddedCSS = css

    if (ws) {
      padding = ws[1].length
      paddedCSS = '\n' + css.split(/\n/).map(line => {
        return ' '.repeat(padding + 2) + line
      }).join('\n')
    }

    output.push(js.replace(re, () => paddedCSS))
  }

  fs.writeFileSync(dest, output.join('\n'))
}

main()
