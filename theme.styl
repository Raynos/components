// Theme Fonts
body
  --body 'Georgia', serif // Body font
  --header 'Caudex', serif // Header font
  --subheader 'Poppins', sans-serif // Accent font
  --monospace 'Space-Mono', monospace // Monospace font

//
// Default Theme Colors
//
body
  --window rgba(255, 255, 255, 1) // Base window color
  --primary #36393d // Primary font and contrast
  --secondary #e8e8e4
  --medium #999da0
  --accent #f06653 // Accent color
  --border #e8e8e4 // Border color
  --background #f7f7f5
  --notification rgba(240, 102, 83, 1) // Notification Badge Color
  --danger rgba(240, 102, 83, 1) // Alert: Caution
  --success rgba(133, 178, 116, 1) // Alert: Success
  --warning rgba(249, 169, 103, 1) // Alert: Warning

//
// Dark Theme Colors
//
body.theme-dark
  --window #2d2f31 // Base window color
  --primary #fff // Primary font and contrast
  --secondary #c3c3c3
  --medium #999da0
  --accent #f06653 // Accent color
  --border #484a4c // Border color
  --background #3c3c3c
  --notification #f06653 // Notification Badge Color
  --caution #f06653 // Alert: Caution
  --success #85b274 // Alert: Success
  --warn #f9a967 // Alert: Warning
