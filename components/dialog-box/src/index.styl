:host
  position relative
  display inline-block

  .wrapper
    position fixed
    top 0
    left 0
    right 0
    bottom 0
    background-color rgba(0,0,0,0.25)
    display flex
    opacity 0
    z-index -100
    visibility hidden
    &.show
      opacity 1
      z-index 100
      visibility visible

  .dialog
    background-color white
    margin auto
    position relative
    border-radius 2px
    box-shadow 0px 30px 90px -20px rgba(0,0,0,0.3), 0 0 1px #a2a9b1
    // display flex
    padding-top 50px

    header
      position absolute
      top 25px
      left 50%
      transform translateX(-50%)
      font 14px 'Poppins', sans-serif
      text-transform uppercase
      letter-spacing 1.5px

    main
      width auto
      text-align center
      padding 10px 30px 30px 30px
      margin 0 auto

    .close
      width 25px
      height 25px
      position absolute
      top 25px
      right 25px
      svg
        width 100%
        height 100%
        use
          fill var(--primary)
          color var(--primary)

    footer
      text-align center
      border 1px solid red
      position absolute
      bottom 0
      left 0
      right 0
      height 50px
