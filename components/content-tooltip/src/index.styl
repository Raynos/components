:host
  position relative
  display inline-block

  span
    all inherit

    #tooltip
      background white
      opacity 0
      position absolute
      z-index -1
      transition all .3s
      border-radius 2px
      box-shadow 0px 0px 10px rgba(0, 0, 0, .4)

      &.show
        opacity 1
        z-index 1
