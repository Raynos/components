:host
  position relative
  display inline-block

  span
    all inherit

    .tooltip
      background white
      opacity 0
      position absolute
      z-index -1
      transition all 0.3s ease-in-out
      border-radius 2px
      box-shadow 0px 30px 90px -20px rgba(0, 0, 0, 0.3), 0 0 1px #a2a9b1;

      &.show
        opacity 1
        z-index 1

      &.arrow-top:after
        bottom 100%
        left 50%
        border solid transparent
        content " "
        height 0
        width 0
        position absolute
        pointer-events none
        border-color rgba(255, 255, 255, 0)
        border-bottom-color #fff
        border-width 30px
        margin-left -30px
