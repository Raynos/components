*
  box-sizing border-box

.wrapper
  .panel
    width 500px
    position fixed
    bottom 0
    top 0
    background-color white
    box-shadow 0px 0px 28px 0 rgba(0,0,0,0.05)
    z-index 100
    transition transform 0.3s ease-in-out

  &.left
    .panel
      left 0
      -webkit-transform translateX(-500px)
      -ms-transform translateX(-500px)
      transform translateX(-500px)
      border-right 1px solid var(--border)

  &.right
    .panel
      right 0
      -webkit-transform translateX(500px)
      -ms-transform translateX(500px)
      transform translateX(500px)
      border-left 1px solid var(--border)

  &.show.right,
  &.show.left
    .panel
      -webkit-transform translateX(0)
      -ms-transform translateX(0)
      transform translateX(0)

    &[overlay="true"]
      .overlay
        opacity 1
        visibility visible
        transition opacity 0.3s ease-in-out, visibility 0s ease 0s

  .overlay
    opacity 0
    visibility hidden
    position fixed
    top 0
    left 0
    right 0
    bottom 0
    // background-color 
    transition opacity 0.3s ease-in-out, visibility 0s ease 1s

  .close
    width 30px
    height 30px
    position absolute
    top 30px
    right 30px

    svg
      width 100%
      height 100%

  header
    padding 20px
    position absolute
    top 0
    left 0
    right 0
    height 90px
    border-bottom 1px solid var(--border)

  main
    padding 20px
    position absolute
    top 90px
    left 0
    right 0
    bottom 70px
    overflow scroll

  footer
    position absolute
    left 0
    right 0
    bottom 0
    height 70px
    padding 20px
    text-align right
    border-top 1px solid var(--border)
