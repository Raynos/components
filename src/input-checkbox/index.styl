input-checkbox
  .wrapper
    display inline-block
    -webkit-user-select none
    -moz-user-select none
    user-select none

  input[type="checkbox"]
    display none

    &[disabled] + label
      opacity 0.35

  label
    color var(--primary)
    font 12px var(--subheader)
    font-weight 500
    text-transform uppercase
    letter-spacing 1px
    display inline-block
    vertical-align middle
    &:nth-of-type(2)
      padding-top 2px
      margin-left 10px
