@require '../../index.styl'
@require './hl.styl'

body
  text-rendering optimizeLegibility
  font-smoothing antialiased
  font-feature-settings "kern"
  font-variant-ligatures common-ligatures
  font-kerning normal
  font-weight normal
  color var(--primary)
  font-family var(--body)
  margin 0
  background-color var(--window)

  &[data-group="custom"]
    [data-group="component"]
      display none
    [data-group="custom"]
      display block

  [data-group="custom"]
    display none
  [data-group="component"]
    display block

p
  font 16px/26px var(--body)

h1, h2, h3, h4, h5
  font-weight normal
  margin 20px 0

h1
  font 48px/56px var(--header)
  padding 60px 0 20px 0

h2
  font 14px/16px var(--subheader)
  font-weight 600
  text-transform uppercase
  letter-spacing 1.5px
  border-top 2px solid var(--primary)
  padding-top 20px
  margin 50px 0

h3
  font 26px/30px var(--header)
  margin-top 60px
  margin-bottom 30px

h4
  font 14px/16px var(--subheader)
  font-weight 400
  text-transform uppercase
  letter-spacing 1.5px
  margin-top 40px

hr
  height 2px
  margin 20px 0px
  background-color transparent
  border 0

a
  color inherit
  text-decoration none
  transition color 0.2s ease-in-out, border 0.2s ease-in-out

  &:visited
    color inherit

body
  .theme-picker
    width 80px
    text-align right
    position absolute
    top 30px
    right 30px
    z-index 99

    svg
      width 18px
      height 18px
      margin auto
      transition opacity 0.2s ease
      opacity 0.5
      cursor pointer
      use
        fill var(--primary)
        color var(--primary)
      &:hover
        opacity 1

  > main
    ul
      font 15px/30px var(--body)
      list-style disc
      padding 0
      padding-left 40px
      margin 30px 0

      li
        margin 10px 0

  > nav
    width 300px
    padding 50px
    position fixed
    top 0
    left 0
    bottom 0
    overflow scroll
    border-right 1px solid var(--border)
    box-shadow 0 0 30px 0px rgba(0,0,0,0.04)
    @media (max-width: 850px)
      display none

    .page-selection
      margin-bottom 50px
      padding 20px 0 0 0
      font-size 13px
      font-family var(--subheader)
      text-transform uppercase
      letter-spacing 1px

      a
        display inline-block
        padding 0px 0px 5px 0px
        border-bottom 1px solid transparent

        &:first-of-type
          margin-right 15px

        &.active,
        &:hover
          border-bottom 1px solid var(--primary)

    ul
      list-style none
      padding 0
      margin-left -10px

    li
      margin 20px 0
      a
        font 17px var(--header)
        font-weight 400
        padding 5px 8px
        background-color transparent
        border-radius 3px
        transition background-color 0.2s ease
        &:hover
          color var(--accent)
        &.selected
          color white
          background-color var(--accent)

    a.logo
      display inline-block
      margin-bottom 10px

      svg
        width 150px
        use
          fill var(--primary)
          color var(--primary)

  > main
    padding 0 60px 60px 60px
    position absolute
    top 0
    left 300px
    right 0
    bottom 0
    overflow scroll
    @media (max-width: 850px)
      left 0
      padding 30px

    .logo
      margin-bottom 50px
      display none
      @media (max-width: 850px)
        display flex
        justify-content center

    a
      border-bottom 1px solid var(--border)
      &:hover
        color var(--accent)
        border-bottom-color var(--accent)

    .hero
      margin-top 125px
      margin-bottom 150px
      @media (max-width: 850px)
        margin-top 0

    .tooltip
      padding 10px
      h3
        margin 0
      p
        margin 4px 0
        font-size 12px
        line-height 18px

    span.req
      color var(--danger)
      font-style italic
      display block
      float right

    div.example
      width 100%
      border 1px solid var(--border)
      .header
        font 13px/16px var(--subheader)
        font-weight 400
        text-transform uppercase
        letter-spacing 1px
        padding 12px 10px 9px 10px
        background-color var(--background)
        border-bottom 1px solid var(--border)
      .content
        max-width 450px
        padding 15px

    table
      width 100%
      text-align left
      margin-bottom 15px
      border-collapse collapse
      border 1px solid var(--border)

    th
      font 13px/16px var(--subheader)
      font-weight 400
      text-transform uppercase
      letter-spacing 1px
      padding 12px 10px 9px 10px
      background-color var(--background)
      border-bottom 1px solid var(--border)
      border-right 1px solid var(--border)

    td
      line-height 22px
      padding 15px
      border-bottom 1px solid var(--border)

    td:not(:first-of-type)
      border-left 1px solid var(--border)

    tr:last-of-type td
      border-bottom 0

    td:last-of-type
      border-right 0

    pre
      padding 15px
      white-space pre-line
      border-radius 3px
      border 1px solid var(--border)
      background-color var(--background)

      code
        border 0
        padding 0
        line-height 18px
        white-space pre-wrap

        i
          color #999

    code
      font-size 14px
      padding 2px 6px 3px 6px
      margin 0 2px
      white-space nowrap
      background-color var(--background)
      border 1px solid var(--border)
      border-radius 3px

    > section
      max-width 800px
      padding-bottom 60px
      &:not(:first-of-type)
        border-top 2px solid var(--border)

    footer
      max-width 800px
      text-align center
      padding 20px 50px 50px 50px

      > div
        border-bottom 0
        display inline-block
        vertical-align middle
        &:first-of-type
          border-right 1px solid var(--border)
          padding-right 40px
          margin-right 40px
        &:not(:first-of-type)
          span, svg
            display inline-block
            margin-right 10px
            vertical-align middle
          svg
            width 130px
            height 50px

        &:hover
          span
            color var(--primary)
          svg
            use
              fill var(--primary)
              color var(--primary)

      span
        color var(--medium)
        font 13px var(--subheader)
        font-weight 600
        text-transform uppercase
        letter-spacing 2px
        display inline-block
        transition all 0.2s ease-in-out

      svg
        height 30px
        width 175px
        margin 0 auto
        display block
        use
          fill var(--medium)
          color var(--medium)
          transition all 0.2s ease-in-out

  .invalidate-buttons
    text-align center
    margin-top 10px

  #intro
    padding-top 100px

    center
      color var(--info)
      margin-top 40px

      img
        vertical-align middle

      a
        color var(--info)
        font 13px var(--subheader)
        text-transform uppercase
        letter-spacing 1px
        margin 15px

    .status
      width 250px
      font 12px var(--subheader)
      text-transform uppercase
      display flex
      justify-content space-around
      margin 50px auto 0 auto

      &:before
        content 'Project Status'
        color var(--medium)
        text-align center
        letter-spacing 1px
        padding 4px 8px
        display inline-block

      &:after
        content 'Experimental'
        color white
        letter-spacing 1px
        padding 4px 8px
        display inline-block
        background-color var(--danger)

    svg
      width 200px
      use
        fill var(--primary)
        color var(--primary)

    p:not(.intro-copy)
      font-size 17px
      line-height 28px

    .col
      width 50%
      padding 10px 0px
      padding-right 30px
      display table-cell

      li
        font-size 18px

    input-button
      text-align center
      margin 50px 0
      display block

    span.first-word
      color var(--primary)

    p.intro-copy
      color var(--medium)
      max-width 670px
      font 30px var(--header)
      text-align center
      margin 0 auto

  content-tooltip
    pre
      margin 0

    span.code-type
      font 12px var(--subheader)
      text-transform uppercase
      text-align center
      letter-spacing 1px
      display block
      padding 5px

  content-dialog
    header, main, footer
      text-align center

    main
      height 100px

  content-tags
    [data-tab-group]
      height 40px

  notification-badge
    display inline-block
    user-select none

  .notification-counter
    display inline-block
    margin-left 15px

    span.add-notification,
    span.subtract-notification
      display inline-block
      margin-left 15px
      border-bottom 1px solid var(--border)
      user-select none
      cursor pointer
      &:hover
        border-bottom-color var(--accent)
